{% extends 'base.html.twig' %}

{% block title %}
	edition
{% endblock %}



{% block body %}
{% if modification %}
  Modification {{ aliment.nom}}
  {% else %}
    Ajout d'un aliment
{% endif %}
	{{ form_start(form)}}
	<div class="row">
		<div class="col-6">
      {% if modification %}
      <img src="{{asset('images/aliments/legumes/'~ aliment.image ~'.jpg')}}" alt="">
      {% endif %}
      <div> {{ form_row(form.imageFile)}}</div>
      <div> {{ form_row(form.nom)}}</div>
    </div>
	<div class="col-6">{{ form_widget(form) }}</div>
	</div>
	<input type="submit" class="btn btn-primary" value="Enregistrer">
	{{ form_end(form) }}
{% endblock %}
